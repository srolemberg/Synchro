<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_exibir_feeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        android:layout_margin="2dp">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imagem_exibir_feeds"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/titulo_exibir_feeds"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imagem_exibir_feeds"
            android:layout_toEndOf="@+id/imagem_exibir_feeds"
            android:textColor="@android:color/primary_text_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/link_exibir_feeds"
            android:layout_below="@+id/titulo_exibir_feeds"
            android:layout_toRightOf="@+id/imagem_exibir_feeds"
            android:layout_toEndOf="@+id/imagem_exibir_feeds"
            android:textColor="@android:color/secondary_text_light"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
