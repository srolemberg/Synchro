<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_exibir_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_exibir_posts2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="2dp"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_launcher"
                        android:scaleType="fitXY"
                        android:id="@+id/image_card"
                        android:visibility="gone"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Titulo do Bagulho Muito LoucoTitulo do  Titulo do Bagulho Muito Louco Bagulho Muito LoucoTitulo do Bagulho Muito LoucoTitulo do Bagulho Muito Louco"
            android:id="@+id/titulo_exibir_posts"
            android:textColor="@android:color/primary_text_light"
            android:maxLines="3"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_below="@+id/card_exibir_posts2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Autor da Parada"
            android:id="@+id/autor_exibir_posts"
            android:layout_below="@+id/titulo_exibir_posts"
            android:textColor="@android:color/secondary_text_light"
            android:maxLines="1"
            android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00/00/0000 00:00"
                android:id="@+id/data_exibir_posts"
                android:layout_below="@+id/autor_exibir_posts"
                android:layout_alignLeft="@+id/autor_exibir_posts"
                android:layout_alignStart="@+id/autor_exibir_posts"
                android:textColor="@android:color/secondary_text_light"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
